<div class="row">
  <div class="col-md-8 mx-auto">
    <%= link_to "Retour au potin", gossip_path(@gossip), class: "btn btn-outline-secondary btn-sm mb-4" %>

    <h2 class="mb-4">Modifier le potin</h2>

    <% if @gossip.errors.any? %>
      <div class="alert alert-danger">
        <p><strong>La mise a jour a echoue pour la (ou les) raison(s) suivante(s) :</strong></p>
        <ul class="mb-0">
          <% @gossip.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: @gossip, local: true) do |f| %>
      <div class="mb-3">
        <%= f.label :title, "Titre", class: "form-label" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :content, "Contenu", class: "form-label" %>
        <%= f.text_area :content, class: "form-control", rows: 5 %>
      </div>

      <div class="mb-3">
        <%= f.label :tag_ids, "Tags", class: "form-label" %>
        <%= f.collection_select :tag_ids, @tags, :id, :title, {}, { multiple: true, class: "form-select" } %>
      </div>

      <div class="d-grid">
        <%= f.submit "Mettre a jour", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>