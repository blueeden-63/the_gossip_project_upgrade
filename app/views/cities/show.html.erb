<div class="row">
  <div class="col-md-10 mx-auto">
    <%= link_to "Retour", root_path, class: "btn btn-outline-secondary btn-sm mb-4" %>

    <div class="card border-0 shadow-sm mb-4">
      <div class="card-body">
        <h1 class="h3 mb-1"><%= @city.name %></h1>
        <p class="text-muted mb-0">Code postal: <%= @city.zip_code %></p>
      </div>
    </div>

    <h2 class="h4 mb-3">Potins de la ville</h2>

    <% if @gossips.any? %>
      <div class="list-group">
        <% @gossips.each do |gossip| %>
          <div class="list-group-item">
            <div class="d-flex justify-content-between align-items-start">
              <div>
                <h5 class="mb-1"><%= gossip.title %></h5>
                <p class="mb-1 text-muted"><%= truncate(gossip.content, length: 100) %></p>
                <small>Par <%= link_to gossip.user.first_name, user_path(gossip.user), class: "text-decoration-none" %></small>
                <p class="mb-0 mt-2"><small class="text-muted"><%= gossip.likes.count %> like(s)</small></p>
              </div>
              <div class="d-flex align-items-center gap-2">
                <%= link_to "Voir", gossip_path(gossip), class: "btn btn-sm btn-outline-primary" %>
                <% if user_signed_in? %>
                  <% if @liked_gossip_ids.include?(gossip.id) %>
                    <%= button_to "Unlike", gossip_like_path(gossip), method: :delete, class: "btn btn-sm btn-outline-danger" %>
                  <% else %>
                    <%= button_to "Like", gossip_like_path(gossip), method: :post, class: "btn btn-sm btn-outline-success" %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-light border">Aucun potin associe a cette ville.</div>
    <% end %>
  </div>
</div>