<div class="row">
  <div class="col-md-8 mx-auto">
    <%= link_to "Retour au potin", gossip_path(@comment.commentable), class: "btn btn-outline-secondary btn-sm mb-4" %>

    <h2 class="mb-4">Modifier le commentaire</h2>

    <% if @comment.errors.any? %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% @comment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: @comment, local: true) do |f| %>
      <div class="mb-3">
        <%= f.label :content, "Contenu", class: "form-label" %>
        <%= f.text_area :content, class: "form-control", rows: 4 %>
      </div>

      <div class="d-flex gap-2">
        <%= f.submit "Mettre a jour", class: "btn btn-primary" %>
        <%= link_to "Supprimer", comment_path(@comment), data: { turbo_method: :delete, turbo_confirm: "Confirmer la suppression ?" }, class: "btn btn-outline-danger" %>
      </div>
    <% end %>
  </div>
</div>