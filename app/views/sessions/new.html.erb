<div class="row">
  <div class="col-md-6 mx-auto">
    <h2 class="mb-4">Se connecter</h2>

    <%= form_with url: session_path, local: true do |f| %>
      <div class="mb-3">
        <%= label_tag :email, "Email", class: "form-label" %>
        <%= email_field_tag :email, params[:email], class: "form-control", required: true %>
      </div>

      <div class="mb-3">
        <%= label_tag :password, "Mot de passe", class: "form-label" %>
        <%= password_field_tag :password, nil, class: "form-control", required: true %>
      </div>

      <div class="d-grid">
        <%= f.submit "Connexion", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
